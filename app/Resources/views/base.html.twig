<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Sylvestre Amoussou{% endblock %}</title>
        {% block stylesheets %}
           <!-- Bootstrap  -->
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">

        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

        {% block body %}
        <div class="container">
    
            <div class="row">
                <div class="col-md-12">
                <h2 class="text-center">L'orage africain : un film de Sylvestre Amoussou</h2>
                </div>
                
                
                {% block menu %}
                    
                {% endblock %}   

                {% for type, messages in app.session.flashBag.all %}
                        {% for message in messages %}
                            <div class="{{ type }}">
                                {{ message|trans({}, 'FOSUserBundle') }}
                            </div>
                        {% endfor %}
                    {% endfor %}
            </div>
            <div class="row">
                <div class="col-md-12">
                    {% block content %}
                        

                    {% endblock %}
                    
                </div>
            </div>
        </div>

           
        {% endblock %}

        {% block javascripts %}

            <!-- jQuery -->
            <script src="{{ asset("js/jquery-3.1.1.js") }}"></script>
            
            <!-- Bootstrap -->
            <script src="{{ asset("js/bootstrap.min.js") }}"></script>
        {% endblock %}

    </body>
</html>
